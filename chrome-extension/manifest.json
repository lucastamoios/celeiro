{
  "manifest_version": 3,
  "name": "Celeiro Amazon Sync",
  "version": "1.0.0",
  "description": "Sincroniza pedidos da Amazon com o Celeiro para categorização automática de transações",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "identity"
  ],
  "oauth2": {
    "client_id": "737562838048-34v2dl6sbu0of1n3d486glb0g3eaeonu.apps.googleusercontent.com",
    "scopes": [
      "openid",
      "email",
      "profile"
    ]
  },
  "host_permissions": [
    "https://www.amazon.com.br/*",
    "https://www.amazon.com/*",
    "http://localhost/*",
    "http://127.0.0.1/*",
    "https://localhost/*",
    "https://127.0.0.1/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com.br/your-orders/*",
        "https://www.amazon.com.br/gp/your-account/order-details*",
        "https://www.amazon.com.br/cpe/yourpayments/transactions*",
        "https://www.amazon.com/your-orders/*",
        "https://www.amazon.com/gp/your-account/order-details*",
        "https://www.amazon.com/cpe/yourpayments/transactions*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
